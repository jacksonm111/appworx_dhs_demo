package calc;

public class Calculator {
	public int add(int x, int y) throws NegativeNumberException {
        if (x < 0) {
            throw new NegativeNumberException("x is less then zero");
        } else if (y < 0) {
            throw new NegativeNumberException("y is less then zero");
        } else {
            return x+y;
        } 
        
